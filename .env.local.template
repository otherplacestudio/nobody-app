# ============================================
# NOBODY APP ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env.local and fill in your values

# --------------------------------------------
# SUPABASE (Required)
# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
# --------------------------------------------

# Your Supabase Project URL (looks like: https://xxxxxxxxxx.supabase.co)
NEXT_PUBLIC_SUPABASE_URL=

# Your Supabase anon/public key (safe for browser)
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Your Supabase service_role key (keep secret! server-side only)
SUPABASE_SERVICE_KEY=

# --------------------------------------------
# OPENAI (Optional but recommended for AI personas)
# Get from: https://platform.openai.com/api-keys
# --------------------------------------------

# Your OpenAI API key (starts with sk-)
OPENAI_API_KEY=

# --------------------------------------------
# APP CONFIG
# --------------------------------------------

# Local development URL (don't change for local dev)
NEXT_PUBLIC_APP_URL=http://localhost:3000